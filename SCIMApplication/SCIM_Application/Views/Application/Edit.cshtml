@model SCIM_Application.Models.Application
@{
    ViewData["Title"] = "Uygulama Düzenle";
}
<h2>Uygulama Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Provider" class="form-label"></label>
        <input asp-for="Provider" class="form-control" />
        <span asp-validation-for="Provider" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ScimEndpoint" class="form-label"></label>
        <input asp-for="ScimEndpoint" class="form-control" />
        <span asp-validation-for="ScimEndpoint" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ApiKey" class="form-label"></label>
        <input asp-for="ApiKey" class="form-control" />
        <span asp-validation-for="ApiKey" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BearerToken" class="form-label"></label>
        <input asp-for="BearerToken" class="form-control" />
        <span asp-validation-for="BearerToken" class="text-danger"></span>
    </div>
    <div class="form-check form-switch mb-3">
        <input class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label" asp-for="IsActive">Aktif</label>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial" /> }
