@model IEnumerable<SCIM_Application.Models.Application>
@{
    ViewData["Title"] = "Uygulamalar";
}
<h2>Uygulamalar</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Uygulama</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Sağlayıcı</th>
            <th>SCIM Endpoint</th>
            <th>Aktif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Provider</td>
                <td>@a.ScimEndpoint</td>
                <td>@(a.IsActive ? "Evet" : "Hayır")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-secondary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
